{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
{% include 'navigation/navbar.html.twig' %}

<form action="{{ path('login') }}" method="post">
    <div class="form-group text-center">
        <label for="email">Identifiant</label>
        <input type="email" class="form-control" id="email" name="_username" placeholder="Identifiant" required>
    </div>
    <div class="form-group text-center">
        <label for="password">Mot de passe</label>
        <input type="password" class="form-control" id="password" name="_password" placeholder="Mot de passe" required>
    </div>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    <div class="text-center">
        <button type="submit" class="btn btn-primary">Connexion</button>
    </div>
</form>

{% endblock %}
