{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    {% include 'navigation/navbar.html.twig' %}

    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header text-center bg-primary text-white">
                        Connexion
                    </div>
                    <div class="card-body">
                        {{ form_start(loginForm, {'action': path('app_login')}) }}

                        <div class="form-group">
                            {{ form_label(loginForm._username, 'Identifiant', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(loginForm._username, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(loginForm._password, 'Mot de passe', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(loginForm._password, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div class="text-center mt-3">
                            <button type="submit" class="btn btn-primary">Se connecter</button>
                        </div>

                        {{ form_end(loginForm) }}

                        {% if error %}
                            <div class="alert alert-danger mt-3" role="alert">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
