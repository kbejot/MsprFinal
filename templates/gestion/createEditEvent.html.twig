{% extends 'base.html.twig' %}

{% block title %}Gérez les concerts{% endblock %}

{% block body %}
    {% include 'navigation/navbar.html.twig' %}

    <div class="container mt-4">
        {{ form_start(form) }}

        <div class="form-group">
            {{ form_label(form.Artiste, 'Artiste', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.Artiste, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.Artiste, {'attr': {'class': 'text-danger'}}) }}
        </div>

    <div class="form-group">
        {{ form_label(form.Date, 'Date', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.Date, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.Date) }}
    </div>

        <div class="mx-auto text-center mb-3">
            {{ form_end(form) }}
        </div>
    </div>

    <table class="table">
        <thead>
        <tr>
            <th>Actions</th>
            <th>Artiste</th>
            <th>Scène</th>
            <th>Date</th>
            <th>Horaire</th>
        </tr>
        </thead>
        <tbody>
        {% for concert in concerts %}
            <tr>
                <td>
                    <a href="{{ path('app_delete_concert', { 'id': concert.id }) }}"
                       onclick="return confirm('Êtes-vous sûr de supprimer le concert {{ concert.Artiste }}?');">
                        <i class="fa fa-trash text-danger"></i>
                    </a>
                </td>
                <td>{{ concert.Artiste }}</td>
                <td>{{ concert.scene }}</td>
                <td>{{ concert.Date|date('d-m-Y') }}</td>
                <td>{{ concert.Horaire|date('H') }} h</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
